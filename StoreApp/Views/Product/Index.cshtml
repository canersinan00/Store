@model ProductListViewModel

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("ProductFilterMenu")
        <div products="" number="3"></div>
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (Product prd in Model.Products)
            {
            <partial name="_ProductCard" model="prd" />
            }
        </div>
        <div>
            <div class="btn-group" page-class-enabled="true" page-class="btn" page-class-normal="btn-outline-dark"
                page-class-selected="btn-primary" page-model="@Model?.Pagination" page-action="Index"></div>
        </div>
    </div>
</div>

@section Footer{
<div>
    Only for Index Footer
</div>
}