@model IEnumerable<Product>

    <div class="text-center">
        <div class="display-6">Products</div>

        <div class="d-flex justify-content-end md-3">
            <a class="btn btn-outline-success" asp-action="Create">
                <i class="fa fa-plus"></i>
                Create
            </a>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image Url</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Product prd in Model)
                {
                <tr>
                    <td>@prd.ProductId</td>
                    <td>
                        <img class="border border-light rounded" src="@prd?.ImageUrl" alt="@prd?.ProductName"
                            width="50">
                    </td>
                    <td>@prd.ProductName</td>
                    <td>@prd.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a data-toogle="tooltip" data-placement="top" title="Edit" asp-action="Update"
                                asp-route-id="@prd.ProductId" class="btn btn-warning">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a data-toogle="tooltip" data-placement="top" title="Delete" asp-action="Delete"
                                asp-route-id="@prd.ProductId" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                            <a data-toogle="tooltip" data-placement="top" title="Web" asp-action="Get"
                                asp-controller="Product" asp-area="" target="_blank" asp-route-id="@prd.ProductId"
                                class="btn btn-info">
                                <i class="fa fa-search"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    @section Scripts
    {
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    }