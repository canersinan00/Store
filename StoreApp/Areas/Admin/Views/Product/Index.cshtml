@model IEnumerable<Product>

    <div class="text-center">
        <div class="display-6">Products</div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Product prd in Model)
                {
                    <tr>
                        <th>@prd.ProductId</th>
                        <th>@prd.ProductName</th>
                        <th>@prd.Price</th>
                        <th>.</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
